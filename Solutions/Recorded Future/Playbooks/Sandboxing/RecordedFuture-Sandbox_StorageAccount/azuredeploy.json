{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "2.0.0.0",
    "metadata": {
        "title": "RecordedFuture-Sandbox_StorageAccount",
        "description": "This playbook will trigger on files in a Storage Account and send them to Recorded Future Sandbox. The result will be written to a custom log (RecordedFutureSandboxResults_CL). To create Microsoft Defender XDR incidents from sandbox results, use a Scheduled Analytics Rule that queries the RecordedFutureSandboxResults_CL table. Direct incident creation via Logic Apps is no longer supported in the unified Microsoft Defender portal.",
        "prerequisites": "To use the Recorded Future Sandbox connector, you will need a valid API token from Recorded Future as described in the documentation https://learn.microsoft.com/en-us/connectors/recordedfuturesandbo/#how-to-get-credentials",
        "postDeployment": [
            "After deployment you have to open the playbook and configure and authorize all connections and press save."
        ],
        "prerequisitesDeployTemplateFile": "",
        "lastUpdateTime": "2026-01-29T00:00:00.000Z",
        "entities": [],
        "tags": [ "Enrichment" ],
        "support": {
            "tier": "Partner",
            "armtemplate": "Generated from https://github.com/Azure/Azure-Sentinel/tree/master/Tools/Playbook-ARM-Template-Generator"
        },
        "author": {
            "name": "Recorded Future"
        },
        "releaseNotes": [
            {
                "version": "1.0",
                "title": "RecordedFuture-Sandbox_StorageAccount",
                "notes": [ "Initial version" ]
            },
            {
                "version": "1.1",
                "title": "API Connectors",
                "notes": [ "API connection rename." ]
            },
            {
                "version": "2.0",
                "title": "RecordedFuture-Sandbox_StorageAccount",
                "notes": [
                    "BREAKING CHANGE: Removed direct incident creation due to Microsoft Defender XDR unified portal migration.",
                    "Sandbox results are now written to RecordedFutureSandboxResults_CL custom log table.",
                    "To create incidents, deploy a Scheduled Analytics Rule that queries RecordedFutureSandboxResults_CL."
                ]
            }
        ]
    },
    "parameters": {
        "PlaybookName": {
            "defaultValue": "RecordedFuture-Sandbox_StorageAccount",
            "type": "string"
        },
        "sandbox_api_key": {
            "type": "string",
            "metadata": {
                "description": "Enter value for sandbox_api_key"
            }
        }
    },
    "variables": {
        "AzureblobConnectionName": "[concat('Azureblob-', parameters('PlaybookName'))]",
        "AzureloganalyticsdatacollectorConnectionName": "RecordedFuture-Azureloganalyticsdatacollector",
        "RecordedfuturesandboConnectionName": "Recordedfuture-SandboConnection"
    },
    "resources": [
        {
            "properties": {
                "provisioningState": "Succeeded",
                "state": "Enabled",
                "definition": {
                    "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {
                        "$connections": {
                            "defaultValue": {},
                            "type": "Object"
                        },
                        "sandbox_api_key": {
                            "defaultValue": "[parameters('sandbox_api_key')]",
                            "type": "string"
                        }
                    },
                    "triggers": {
                        "Recurrence": {
                            "recurrence": {
                                "frequency": "Week",
                                "interval": 1
                            },
                            "evaluatedRecurrence": {
                                "frequency": "Week",
                                "interval": 1
                            },
                            "type": "Recurrence"
                        }
                    },
                    "actions": {
                        "Send_sandbox_results_to_log_analytics": {
                            "runAfter": {
                                "Get_the_full_report": [
                                    "Succeeded"
                                ]
                            },
                            "type": "ApiConnection",
                            "inputs": {
                                "body": "{\n\"FileName\": \"@{body('Get_Blob_Metadata_(V2)')?['DisplayName']}\",\n\"SandboxScore\": \"@{body('Get_the_full_report')?['analysis']?['score']}\",\n\"SandboxVerdict\": \"@{body('Get_the_full_report')?['analysis']?['verdict']}\",\n\"SampleId\": \"@{body('Get_the_full_report')?['id']}\",\n\"HtmlReport\": \"@{body('Get_the_full_report')?['html_report']}\",\n\"Source\": \"StorageAccount\",\n\"ScanTime\": \"@{utcNow()}\"\n}",
                                "headers": {
                                    "Log-Type": "RecordedFutureSandboxResults"
                                },
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['azureloganalyticsdatacollector']['connectionId']"
                                    }
                                },
                                "method": "post",
                                "path": "/api/logs"
                            }
                        },
                        "Get_Blob_Metadata_(V2)": {
                            "runAfter": {
                                "Get_blob_content_(V2)": [
                                    "Succeeded"
                                ]
                            },
                            "metadata": {
                                "JTJmdGVzdGluZyUyZmNhbGMuZXhl": "/testing/calc.exe"
                            },
                            "type": "ApiConnection",
                            "inputs": {
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['azureblob']['connectionId']"
                                    }
                                },
                                "method": "get",
                                "path": "/v2/datasets/@{encodeURIComponent(encodeURIComponent('AccountNameFromSettings'))}/files/@{encodeURIComponent(encodeURIComponent('JTJmdGVzdGluZyUyZmNhbGMuZXhl'))}"
                            }
                        },
                        "Get_blob_content_(V2)": {
                            "runAfter": {},
                            "metadata": {
                                "JTJmdGVzdGluZyUyZmNhbGMuZXhl": "/testing/calc.exe"
                            },
                            "type": "ApiConnection",
                            "inputs": {
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['azureblob']['connectionId']"
                                    }
                                },
                                "method": "get",
                                "path": "/v2/datasets/@{encodeURIComponent(encodeURIComponent('AccountNameFromSettings'))}/files/@{encodeURIComponent(encodeURIComponent('JTJmdGVzdGluZyUyZmNhbGMuZXhl'))}/content",
                                "queries": {
                                    "inferContentType": true
                                }
                            }
                        },
                        "Get_the_full_report": {
                            "runAfter": {
                                "Until": [
                                    "Succeeded"
                                ]
                            },
                            "type": "ApiConnection",
                            "inputs": {
                                "headers": {
                                    "SandboxToken": "@parameters('sandbox_api_key')"
                                },
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['recordedfuturesandbo']['connectionId']"
                                    }
                                },
                                "method": "get",
                                "path": "/samples/@{encodeURIComponent(body('Get_the_full_summary')?['id'])}/overview.json"
                            }
                        },
                        "Initialize_sandbox_status": {
                            "runAfter": {
                                "Submit_file_samples": [
                                    "Succeeded"
                                ]
                            },
                            "type": "InitializeVariable",
                            "inputs": {
                                "variables": [
                                    {
                                        "name": "sandbox_status",
                                        "type": "string"
                                    }
                                ]
                            }
                        },
                        "Submit_file_samples": {
                            "runAfter": {
                                "Get_Blob_Metadata_(V2)": [
                                    "Succeeded"
                                ]
                            },
                            "type": "ApiConnection",
                            "inputs": {
                                "body": {
                                    "$content-type": "multipart/form-data",
                                    "$multipart": [
                                        {
                                            "body": "@body('Get_blob_content_(V2)')",
                                            "headers": {
                                                "Content-Disposition": "form-data; name=\"file\"; filename=\"@{body('Get_Blob_Metadata_(V2)')?['DisplayName']}\""
                                            }
                                        }
                                    ]
                                },
                                "headers": {
                                    "SandboxToken": "@parameters('sandbox_api_key')"
                                },
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['recordedfuturesandbo']['connectionId']"
                                    }
                                },
                                "method": "post",
                                "path": "/samples/file"
                            }
                        },
                        "Until": {
                            "actions": {
                                "Delay": {
                                    "runAfter": {
                                        "Set_sandbox_status": [
                                            "Succeeded"
                                        ]
                                    },
                                    "type": "Wait",
                                    "inputs": {
                                        "interval": {
                                            "count": 2,
                                            "unit": "Minute"
                                        }
                                    }
                                },
                                "Get_the_full_summary": {
                                    "runAfter": {},
                                    "type": "ApiConnection",
                                    "inputs": {
                                        "headers": {
                                            "SandboxToken": "@parameters('sandbox_api_key')"
                                        },
                                        "host": {
                                            "connection": {
                                                "name": "@parameters('$connections')['recordedfuturesandbo']['connectionId']"
                                            }
                                        },
                                        "method": "get",
                                        "path": "/samples/@{encodeURIComponent(body('Submit_file_samples')?['id'])}"
                                    }
                                },
                                "Set_sandbox_status": {
                                    "runAfter": {
                                        "Get_the_full_summary": [
                                            "Succeeded"
                                        ]
                                    },
                                    "type": "SetVariable",
                                    "inputs": {
                                        "name": "sandbox_status",
                                        "value": "@body('Get_the_full_summary')?['status']"
                                    }
                                }
                            },
                            "runAfter": {
                                "Initialize_sandbox_status": [
                                    "Succeeded"
                                ]
                            },
                            "expression": "@equals(variables('sandbox_status'), 'reported')",
                            "limit": {
                                "count": 60,
                                "timeout": "PT1H"
                            },
                            "type": "Until"
                        }
                    },
                    "outputs": {}
                },
                "parameters": {
                    "$connections": {
                        "value": {
                            "azureblob": {
                                "connectionId": "[resourceId('Microsoft.Web/connections', variables('AzureblobConnectionName'))]",
                                "connectionName": "[variables('AzureblobConnectionName')]",
                                "id": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Web/locations/', resourceGroup().location, '/managedApis/Azureblob')]"
                            },
                            "azureloganalyticsdatacollector": {
                                "connectionId": "[resourceId('Microsoft.Web/connections', variables('AzureloganalyticsdatacollectorConnectionName'))]",
                                "connectionName": "[variables('AzureloganalyticsdatacollectorConnectionName')]",
                                "id": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Web/locations/', resourceGroup().location, '/managedApis/Azureloganalyticsdatacollector')]"
                            },
                            "recordedfuturesandbo": {
                                "connectionId": "[resourceId('Microsoft.Web/connections', variables('RecordedfuturesandboConnectionName'))]",
                                "connectionName": "[variables('RecordedfuturesandboConnectionName')]",
                                "id": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Web/locations/', resourceGroup().location, '/managedApis/Recordedfuturesandbo')]"
                            }
                        }
                    }
                }
            },
            "name": "[parameters('PlaybookName')]",
            "type": "Microsoft.Logic/workflows",
            "location": "[resourceGroup().location]",
            "tags": {
                "hidden-SentinelTemplateName": "RecordedFuture-Sandbox_StorageAccount",
                "hidden-SentinelTemplateVersion": "2.0"
            },
            "identity": {
                "type": "SystemAssigned"
            },
            "apiVersion": "2017-07-01",
            "dependsOn": [
                "[resourceId('Microsoft.Web/connections', variables('AzureblobConnectionName'))]",
                "[resourceId('Microsoft.Web/connections', variables('AzureloganalyticsdatacollectorConnectionName'))]",
                "[resourceId('Microsoft.Web/connections', variables('RecordedfuturesandboConnectionName'))]"
            ]
        },
        {
            "type": "Microsoft.Web/connections",
            "apiVersion": "2016-06-01",
            "name": "[variables('AzureblobConnectionName')]",
            "location": "[resourceGroup().location]",
            "kind": "V1",
            "properties": {
                "displayName": "[variables('AzureblobConnectionName')]",
                "customParameterValues": {},
                "api": {
                    "id": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Web/locations/', resourceGroup().location, '/managedApis/Azureblob')]"
                }
            }
        },
        {
            "type": "Microsoft.Web/connections",
            "apiVersion": "2016-06-01",
            "name": "[variables('AzureloganalyticsdatacollectorConnectionName')]",
            "location": "[resourceGroup().location]",
            "kind": "V1",
            "properties": {
                "displayName": "[variables('AzureloganalyticsdatacollectorConnectionName')]",
                "customParameterValues": {},
                "api": {
                    "id": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Web/locations/', resourceGroup().location, '/managedApis/Azureloganalyticsdatacollector')]"
                }
            }
        },
        {
            "type": "Microsoft.Web/connections",
            "apiVersion": "2016-06-01",
            "name": "[variables('RecordedfuturesandboConnectionName')]",
            "location": "[resourceGroup().location]",
            "kind": "V1",
            "properties": {
                "displayName": "[variables('RecordedfuturesandboConnectionName')]",
                "customParameterValues": {},
                "api": {
                    "id": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Web/locations/', resourceGroup().location, '/managedApis/Recordedfuturesandbo')]"
                }
            }
        }
    ]
}
